<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuff.kev.dramaticpapercut" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_152"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" android:required="false"/>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="HistoryDetails" android:screenOrientation="portrait"></activity>

        <!-- widget -->
        <service android:name="com.stuff.kev.dramaticpapercut.IdNowService">
        </service>
        <receiver android:name="com.stuff.kev.dramaticpapercut.IdNowWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.ALTERNATIVE"></category>
            </intent-filter>
            <intent-filter>
                <action android:name="com.customer.example.IdNowService.IDNOW" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.customer.example.IdNowService.CANCEL" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widgetproviderinfo" />
        </receiver>
    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>