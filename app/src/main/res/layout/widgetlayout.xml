<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/rectangle_widget" 
  android:orientation="horizontal"
  >
  
    
	<ImageView android:id="@+id/coverartWidget" 
	    android:layout_width="0dp" 
	    android:layout_height="match_parent" 
	    android:layout_weight="1" 
	    android:src="@null" 
	    android:background="@drawable/no_image"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:layout_marginTop="6dp"
	    android:layout_marginBottom="6dp"
	    android:layout_gravity="center_vertical">	    
	</ImageView>
	<!--      android:background="@drawable/ectangle_rounded_edges_1" -->
	
	<LinearLayout 
	        android:layout_width="0dp" 
		    android:layout_height="match_parent"
		    android:layout_weight="1.7" 
		    android:orientation="vertical" >
		<TextView 
		    android:id="@+id/trackTitleWidgetText" 
		    android:text=""
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content"
		    android:layout_margin="5dp" 	
		    android:textSize="15dp"
		    android:textStyle="bold"
		    android:textColor="@color/bright_red">	    
		</TextView>
		<TextView 
		    android:id="@+id/artistText" 
		    android:text=""
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_marginLeft="5dp" 		
		    android:textColor="@color/light_gray">	    
		</TextView>
		<TextView 
		    android:id="@+id/albumTitleWidgetText" 
		    android:text=""
		    android:layout_marginLeft="5dp" 
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 	
		    android:textColor="@color/light_gray">	    
		</TextView>
		
		
	</LinearLayout>
	
	<RelativeLayout 
	    	android:layout_width="0dp" 
		    android:layout_height="match_parent"
		    android:layout_weight="1" 
		 
	    >
	    
    <ViewFlipper
        android:id="@+id/viewFlipper"
		android:autoStart="true" 
		android:flipInterval="100" 
		android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    
	
	<ImageView
		    android:id="@+id/coverart3"
		    android:layout_width="80dp"
		    android:layout_height="80dp"
		    android:layout_marginTop="8dp" 
		    android:layout_marginLeft="5dp"
		    android:layout_alignParentTop="true"
		    android:background="@null"
		    android:src="@drawable/circle_widget" >
	    
	</ImageView>
	
	<ImageView
		    android:id="@+id/coverart1"
		    android:layout_width="95dp"
		    android:layout_height="95dp"
		    android:layout_alignParentLeft="true"
		    android:layout_marginTop="3dp"
		    android:background="@null"
		    android:src="@drawable/circle_widget" >
	    
	</ImageView>
	
	
	 </ViewFlipper>
	
	
		<ImageButton android:id="@+id/idNowWidgetBtn" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_marginTop="25dp" 
	    android:background="@null" 
	    android:src="@drawable/idnow_widget" 	    
	  >	    
	</ImageButton>
			
	<ImageButton
            android:id="@+id/cancelWidgetBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" 
            android:background="@null"
            android:src="@drawable/cancel_widget"
            android:visibility="gone" >
    </ImageButton>
	
	
	</RelativeLayout>
	
	
	
	
</LinearLayout>