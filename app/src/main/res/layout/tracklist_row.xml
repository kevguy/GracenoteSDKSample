<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content" android:layout_marginTop="10dip"
	android:layout_marginBottom="10dip">
	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:padding="10dip">
		<ImageView android:id="@+id/CoverArtImage"
			android:layout_height="65dip" android:layout_width="65dip"
			android:src="@drawable/no_cover_art"></ImageView>
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_toRightOf="@+id/CoverArtImage"
			android:layout_marginLeft="10dip">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/TrackTextView"
				android:text="Track" android:paddingTop="1dip" android:textSize="12dip"
				android:textStyle="bold" android:textColor="@color/gracenote_red"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/ArtistTextView"
				android:text="Artist" android:paddingTop="1dip" android:textSize="11dip"></TextView>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Album"
				android:id="@+id/AlbumTextView" android:paddingTop="1dip"
				android:textSize="11dip"></TextView>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>