	<LinearLayout android:id="@+id/albumReviewLayout"
		android:layout_height="wrap_content" android:padding="10dip"
		android:layout_width="fill_parent"
		android:orientation="horizontal">
		
		<ImageView android:id="@+id/albumReviewImage" 
		    android:src="@drawable/no_image"
			android:layout_alignParentTop="true" 
			android:layout_width="100dip"
   			android:layout_height="100dip"
   			android:text="no image"
   			android:layout_marginLeft="10dp"
			/>	
			
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="Album Review"
            android:textColor="@color/very_dark_gray"
   			android:layout_height="100dip"
   			android:layout_marginLeft="15dp"
            android:textSize="20sp"
    />
        
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip" >
     
        <Button
            android:id="@+id/closeWindow"
            android:layout_width="20dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:drawableRight="@drawable/icon_close_window"
            android:gravity="top|right" />
	</LinearLayout>
	</LinearLayout>
	
	<LinearLayout
         	android:layout_width="fill_parent"
         	android:layout_height="5dp"
         	android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
         	android:background="@drawable/line"  /> 
         	
	<ScrollView android:paddingLeft="5px" android:id="@+id/albumReviewScroller"
		android:layout_height="200dip" android:layout_width="fill_parent">
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_margin="10dip"
			android:id="@+id/TextLayout" >
			<TextView 
			    android:id="@+id/albumReviewText"
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/very_dark_gray"
        android:width="0px" 
		android:text="No album review available"
		/>			    
		
		</LinearLayout>
	</ScrollView>
	
</LinearLayout>
